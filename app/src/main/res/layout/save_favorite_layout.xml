<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="8"
        android:rowCount="1"
        android:background="#cccccc">
        <Button
            android:layout_width="60dp"
            android:background="@color/white"
            android:textColor="@color/black"
            app:backgroundTint="#FFCC00"
            android:drawableLeft="@drawable/thu_nho"
            ></Button>
        <TextView
            android:text=" Lưu vào bộ sưu tập"
            android:layout_gravity="center"
            android:layout_columnWeight="7"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />
    </GridLayout>



    <CheckBox
        android:id="@+id/int_id"
        android:text="Bộ sưu tập 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/double_id"
        android:text="Bộ sưu tập 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/string_id"
        android:text="Bộ sưu tập 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/black"
        app:backgroundTint="#FFCC00"
        android:layout_marginTop="3dp"></Button>

</LinearLayout>