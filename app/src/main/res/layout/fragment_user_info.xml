<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FavoriteListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:columnCount="8"
            android:rowCount="1">
            <TextView
                android:text="QUẢN LÝ TÀI KHOẢN"
                android:layout_gravity="center"
                android:layout_columnWeight="7"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="50dp"
                android:background="@color/white"
                android:textColor="@color/black"
                app:backgroundTint="#FFCC00"
                android:drawableLeft="@drawable/thu_nho"
                ></Button>

        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/teal_700">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgUser"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/avatar"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>


            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtTenUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mai Thanh Nhã"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/txtSoDienThoaiUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0965163425"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtDiaChiUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1024 Phạm Văn Đồng, Hiệp Bình Chánh, Thủ Đức, TP. Hồ Chí Minh"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDoiThongTin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:textColor="@color/black"
                app:backgroundTint="#FFCC00"
                android:drawableLeft="@drawable/logout"
                android:gravity="left"
                android:text="Đổi thông tin"></Button>
            <Button
                android:id="@+id/btnMoiBanBe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/logout"
                android:text="Mời bạn bè"
                android:gravity="left"
                android:textColor="@color/black"
                app:backgroundTint="#FFCC00"
                android:background="@color/white"
                android:layout_marginTop="5dp">
            </Button>
            <Button
                android:id="@+id/btnGopY"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/logout"
                android:text="Góp ý"
                android:textColor="@color/black"
                app:backgroundTint="#FFCC00"
                android:gravity="left"
                app:background="@color/white"
                android:layout_marginTop="5dp">
            </Button>
            <Button
                android:id="@+id/btnDangXuat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/logout"
                android:text="Đăng xuất"
                android:textColor="@color/black"
                app:backgroundTint="#FFCC00"
                android:gravity="left"
                app:background="@color/white"
                android:layout_marginTop="5dp">
            </Button>

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>