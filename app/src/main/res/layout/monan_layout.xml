<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgMon"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/caloc" />

    <TextView
        android:id="@+id/txtTenMon"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cá lóc hấp bầu"
        android:textStyle="bold"
        android:textSize="40sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/txtMoTaMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thơm ngon mời bạn ăn nha!"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/txtGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="45.000 VNĐ"
        android:textColor="@color/teal_700"
        android:textSize="30sp" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/edtLoiNhanChoCuaHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Lời nhắn cho cửa hàng"
        android:inputType="textPersonName" />
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTangSoLuong"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="-"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnGiamSoLuong"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/teal_700"
            android:text="+"
            android:textSize="20sp"/>

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/teal_700"
            android:text="Đặt hàng"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>